    "version": "0.2.0",
    "configurations": [
        {
            "name": "Kubernetes: Run/Debug", // do not use Debug or make sure dlv entrypoint is injected
            "type": "cloudcode.kubernetes",
            "request": "launch", // launch the deployment, use attach for debug
            "skaffoldConfig": "${workspaceFolder}/skaffold.yaml",
            "watch": true,
            "cleanUp": true,
            "portForward": true,
            "autoStop": false,
            // NOT working so far (initContainer not injected)
            // "debug": [
            //     {
            //         "program": "cmd/groom/groom.go",
            //         "image": "groomImage",
            //         "containerName": "groom",
            //         "sourceFileMap": {
            //             "${workspaceFolder}": "/go/src"
            //         }
            //     }
            // ]
        },
        {
            "name": "attach",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "debugAdapter": "dlv-dap",
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "/",
                },
            ],
            "port": 9229
        },
        {
            "name": "Attach to Kubernetes Pod",
            "type": "cloudcode.kubernetes",
            "request": "attach",
            "language": "Go",
            "debugPort": 9229,
            "protocol": "auto",
            "containerName": "groom",
            "podSelector": {
                "app": "groom-app"
            },
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/",
        },
        {
            "name": "Launch server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd",
            "args": [
                "server",
                "-debug"
            ]
        },
        {
            "name": "Launch client",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd",
            "args": [
                "client",
                "-websocket",
                "localhost:8080"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Launch groom",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/groom",
            "console": "integratedTerminal"
        },
        {
            "name": "Remote debug in Kubernetes",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/go/src",
            "cwd": "${workspaceFolder}",
            "port": 9229,
            "host": "127.0.0.1",
            "showLog": true
        }
    ]
}