    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch groom with Kubernetes",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/groom",
            "console": "integratedTerminal",
            "preLaunchTask": "bridge-to-kubernetes.resource",
            "env": {
                "GRPC_DNS_RESOLVER": "native"
            }
        },
        {
            "name": "Launch server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd",
            "args": [
                "server",
                "-debug"
            ]
        },
        {
            "name": "Launch client",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd",
            "args": [
                "client",
                "-websocket",
                "localhost:8080"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Launch groom",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/groom",
            "console": "integratedTerminal"
        }
    ]
}